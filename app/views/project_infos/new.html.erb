<h1>neuen eintrag erstellen</h1>

<%= form_tag project_infos_path, :class => "form-inline" do %>
  </br>
  <%= text_field_tag "combi", nil, :placeholder => 'project info eintragen...', :class => "span6" %>
  <%= submit_tag("speichern", :class => "btn") %>
<% end %>
<div id="match"></div>

