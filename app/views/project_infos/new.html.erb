<h1>neuen eintrag erstellen</h1>

<%= form_tag project_infos_path, :class => "form-inline" do %>
  </br>
  <%= text_field_tag "combi", nil, :placeholder => 'project info eintragen...', :class => "span6 einzug" %>
  <%= submit_tag("speichern", :class => "btn") %>
<% end %>
<div id="match" class="einzug"></div>

<h1>Ã¼bersicht</h1>
<ul class="unstyled">
	<% @project_infos_grouped.each do |name, duration| %>
		<li class="einzug"><h3><%= duration %> : <%= name %></h3></li>
	<% end %>
</ul>

<h1>historie</h1>
<ul class="unstyled">
	<% @project_infos.each do |pi| %>
		<li class="einzug"><h3><%= pi.duration %> : <%= pi.name %> => <%= pi.description %> (<%= pi.user.name %>)</h3></li>
	<% end %>
</ul>